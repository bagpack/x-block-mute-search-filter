{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "worker": true
  },
  "globals": {
    "chrome": "readonly",
    "DEBUG": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "overrides": [
    {
      "files": ["config.js"],
      "rules": {
        "no-redeclare": "off"
      }
    }
  ],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
  }
}
